[user]
  email = giovanni.charles@gmail.com
  name = Giovanni Charles
[core]
  editor = /usr/local/bin/vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[push]
  default = matching
[color]
  ui = true
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  l = log --graph --decorate --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --date=relative
  ll = log --graph --decorate --abbrev-commit --pretty=oneline --all
  lll = log --graph --decorate --abbrev-commit
  llll = log --graph --decorate --abbrev-commit --all
  ls = ls-files
